ifndef config
  config=debug_x64
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild

SHELLTYPE := posix
ifeq (.exe,$(findstring .exe,$(ComSpec)))
	SHELLTYPE := msdos
endif

# Configurations
# #############################################

RESCOMP = windres
INCLUDES += -I../external/flux-uv/third_party/concurrentqueue/include -I../external/flux-uv/third_party/fmtlib/include -I../external/flux-uv/third_party/miniz/include -I../external/flux-uv/third_party/monocypher/include -I../external/flux-uv/third_party/pegtl/include -I../external/flux-uv/third_party/parallel-hashmap/include -I../external/flux-uv/third_party/zstd/include -I../external/flux-uv/include
FORCE_INCLUDE +=
ALL_CPPFLAGS += $(CPPFLAGS) -MMD -MP $(DEFINES) $(INCLUDES)
ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
define PREBUILDCMDS
endef
define PRELINKCMDS
endef
define POSTBUILDCMDS
endef

ifeq ($(config),debug_x64)
TARGETDIR = ../bin
TARGET = $(TARGETDIR)/simplevol-debug-x64-gcc.exe
OBJDIR = ../_build_/debug-x64-gcc/x64/debug/simplevol
DEFINES += -D_DEBUG=1
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -g -march=native -Wall -pthread
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -g -std=c++17 -march=native -Wall -pthread
LIBS += ../lib/libflux-uv-preview-debug-x64-gcc.a -ldl
LDDEPS += ../lib/libflux-uv-preview-debug-x64-gcc.a
ALL_LDFLAGS += $(LDFLAGS) -L/usr/lib64 -m64 -pthread

else ifeq ($(config),release_x64)
TARGETDIR = ../bin
TARGET = $(TARGETDIR)/simplevol-release-x64-gcc.exe
OBJDIR = ../_build_/release-x64-gcc/x64/release/simplevol
DEFINES += -DNDEBUG=1
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -O2 -march=native -Wall -pthread
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -O2 -std=c++17 -march=native -Wall -pthread
LIBS += ../lib/libflux-uv-preview-release-x64-gcc.a -ldl
